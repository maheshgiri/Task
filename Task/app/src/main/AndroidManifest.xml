<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hungry.task">
<uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:parentActivityName=".HomeActivity"
        >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HomeAcitivity"
            android:label="@string/title_activity_home_acitivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
  <activity android:name=".LocationDetailsActivity"
      android:label="Share Comment and Like"

      >
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="com.example.hungry.task.HomeAcitivity" />
  </activity>

    </application>

</manifest>
